    <link rel="canonical" href="https://getbootstrap.com/docs/4.3/examples/sign-in/">

    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="/stylesheets/signin.css" />
</head>

<body>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>


    <div class="card-body">
        <div class="container">
            <div class="card-header">
                <div class="card-header h3 mb-3  text-center font-weight-bold">
                    Project Management System
                </div>
                <form class="form-signin" action="send" method="post">

                    <h4 class="h4 mb-2 font-weight-normal">Forgot Password Request</h4>
                    <h6 class="h6 mb-1 font-weight-normal">Email Account you want to receive</h6>
                    <label for="inputEmailAccount" class="sr-only">Email Account</label>
                    <input type="text" id="emailaccount" name="emailAccount" class="form-control"
                        placeholder="Email Account" required>
                    <h6 class="text-left h6 mb-0 font-italic">Plaese Insert Your Email </h6>
                    <button class="btn btn-lg btn-outline-info btn-block" type="submit"
                        onclick="return confirm('Are you sure want to change your former password?')">Change
                        Password!</button>
                    <a class="btn btn-lg btn-secondary btn-block mb-3" href="/login">Back to Sign In</a>

                    <% if(forgotMessage.length > 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= forgotMessage %>
                    </div>
                    <%}%>
                        <% if(successMessage.length > 0) { %>
                            <div class="alert alert-success" role="alert">
                        <%= successMessage %>
                    </div>
                    <%}%>
                    <p class="mt-5 mb-3 text-muted">&copy; zul@rubicamp.com</p>
                </form>
            </div>
        </div>
    </div>
</body>

</html>