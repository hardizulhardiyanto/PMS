<% include ../partial/header %>

<h1 style="font-weight: bold;margin-top:15px;margin-left:30px">Profile</h1>
<hr>

<div class="container">
    <form action="/profile/update" method="post" >
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="email" name="email" placeholder="Email"
                    value="<%=dbDATA[0].email%>" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="password" name="password" placeholder="Password" value="<%=dbDATA[0].password%>">
            </div>
        </div>
        <!-- position-radio -->
        <div class="row">
            <legend class="col-form-label col-sm-2 pt-0">Position</legend>
            <fieldset id="position-radio" class="col-form-label col-sm-10 pt-0">
                <div class="col-sm-10">
                    <div class="custom-control custom-radio my-1 mr-sm-2">
                        <input class="custom-control-input" type="radio" name="position" id="position-radio1"
                            value="manager"<%= (dbDATA[0].roles == 'manager') ? 'checked':''%>>
                        <label class="custom-control-label" for="position-radio1">
                            Manager
                        </label>
                    </div>
                    <div class="custom-control custom-radio my-1 mr-sm-2">
                        <input class="custom-control-input" type="radio" name="position" id="position-radio2"
                            value="Software Developer"<%= (dbDATA[0].roles == "Software Developer") ? 'checked' : '' %>>
                        <label class="custom-control-label" for="position-radio2">
                            Software Developer
                        </label>
                    </div>
                    <div class="custom-control custom-radio my-1 mr-sm-2">
                        <input class="custom-control-input" type="radio" name="position" id="position-radio3"
                            value="Quality Assurance"<%= (dbDATA[0].roles == 'Quality Assurance') ? 'checked' : ''%>>
                        <label class="custom-control-label" for="position-radio3">
                            Quality Assurance
                        </label>
                    </div>
                </div>
            </fieldset>

        </div>
        <div class="form-group row">
            <legend class="col-form-label col-sm-2 pt-0">Working Status</legend>
            <fieldset id="status-radio" class="col-form-label col-sm-10 pt-0">
                <div class="col-sm-10">
                    
                    <div class="custom-control custom-radio my-1 mr-sm-2">
                        <input class="custom-control-input" type="radio" name="working_status" id="position-ck1"
                            value="fulltime"<%= (dbDATA[0].work_status == 'fulltime') ? 'checked':''%>>
                        <label class="custom-control-label" for="position-ck1">
                            Wants to be a Full Timer
                        </label>
                    </div>
                    
                    <div class="custom-control custom-radio my-1 mr-sm-2">
                        <input class="custom-control-input" type="radio" name="working_status" id="position-ck2"
                            value="parttime"<%= (dbDATA[0].work_status == 'parttime') ? 'checked' : '' %>>
                        <label class="custom-control-label" for="position-ck2">
                            Wants to be a Part Timer
                        </label>
                    </div>
                    
                </div>
            </fieldset>
        </div>
        <button type="submit" class="btn btn-outline-primary" onclick="return confirm('Update Data?')">Update</button>
    </form>
</div>

<% include ../partial/footer %>