<% include ../partial/header %>

<h1 style="font-weight: bold;margin-top:15px;margin-left:30px">Add Projects</h1>

<% if(dataNull.length > 0) { %>
    <div class="alert alert-success" role="alert">
        <h2> <%= dataNull %></h2>
    </div>
    <%}%>

<div class="container">
    <form action="/projects/add" method="POST">
        <div class="form-group row">
            <label for="addproject" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="addproject" name="addproject" placeholder="Project Name">
            </div>
        </div>
        <div class="form-group row">

            <legend class="col-form-label col-sm-2 pt-0">Members</legend>
            <fieldset id="status-radio" class="col-form-label col-sm-10 pt-0">
            <div class="col-sm-10">
                <% for (let i = 0; i < data.length; i ++) {%>
                    <div class="custom-control custom-checkbox my-1 mr-sm-2">
                        <input class="form-check-input" type="checkbox" name="membersck"  id="checkbox<%=i%>" value="<%=`${data[i].userid}, '${data[i].roles}'`%>">
                        <label for="checkbox<%=i%>" class="custom-control custom-checkbox my-1 mr-sm-2" <%= (data[i] == 'Super Admin') ? 'hidden' : '' %>>
                            <%= data[i].firstname + ' ' + data[i].lastname %>
                        </label>
                    </div>
                <%}%>
            </div>
            </fieldset>
        </div>
        <button type="submit" class="btn btn-outline-primary">Save</button>
        <a class="btn btn-warning" href="/projects" role="button">Back</a>

    </form>
</div>





<% include ../partial/footer %>